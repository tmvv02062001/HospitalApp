<head>

    <style>
        
        .form-container
        {
            text-align: left;
        }

    </style>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script type="text/javascript">

        function getDetails()
        {
            var BDetails =
            {
                PName : $("#name").val(),
                PGender : $('input[name="gender"]:checked').val(),
                PCause :$("#cause").val(),

                DName : $("#dName").val(),
                DSpecs : $("#dSpecs").val(),

                HName : $("#hName").val(),
                HAddress : $("#hAddress").val(),
                HPhone : $("#hPhone").val(),

                BAmount : $("#bAmount").val(),
                BMode : $("#bMode").val(),
            
            };
            alert(JSON.stringify(BDetails,null,2))

            $.ajax
            ({
                url:"/HospitalController1/GetbDetails",
                type:"POST",
                data : BDetails,
                success : function(responce)
                {
                    console.log(responce);
                    alert("Details Added!");
                    window.location.href = "/HospitalController1/ReadPatient";
                },
                Error : function(error ,status, xhr)
                {
                    alert("error!");
                }
            });
        };
    </script>
</head>
<body>
    <div class="form-container">

        <h2>Billing_Details</h2>

        <form class="Billing_Details">

            <div class="col-md-3">
                <label class="form-label">Patient_Name :</label>
                <input type="text" id="name" class="form-control" name="PName" />
            </div>

            <div class="co-md-3">
                <label class="form-label">Gender :</label>

                <div class="form-check form-check-inline">
                    <input type="radio" id="male" class="form-check-input" name="gender" value="male" />
                    <label class="form-check-label">Male</label>
                </div>

                <div class="form-check form-check-inline">
                    <input type="radio" id="female" class="form-check-input" name="gender" value="female" />
                    <label class="form-check-label">Female</label>
                </div>

                <div class="form-check form-check-inline">
                    <input type="radio" id="others" class="form-check-input" name="gender" value="others" />
                    <label class="form-check-label">Others</label>
                </div>
            </div>

            <div class="col-md-3">
                <label class="form-label">Patient_Cause :</label>
                <input type="text" id="cause" class="form-control" name="PCause" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Doctor_Name :</label>
                <input type="text" id="dName" class="form-control" name="DName" />

                <label class="form-label">Doctor_Specs :</label>
                <input type="text" id="dSpecs" class="form-control" name="DSpecs" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Hospital_Name :</label>
                <input type="text" id="hName" class="form-control" name="HName" />

                <label class="form-label">Hospital_Address :</label>
                <input type="text" id="hAddress" class="form-control" name="HAddress" />

                <label class="form-label">Hospital_PhoneNo :</label>
                <input type="text" id="hPhone" class="form-control" name="HPhoen" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Billing_Amount :</label>
                <input type="number" id="bAmount" class="form-control" name="BAmount" />

                <label for="billing_mode">Billing_Mode :</label>
                <select class="form-select" id="bMode">
                    <option value="Select the Payments">Select-the-Payments</option>
                    <option value="Cash">Cash</option>
                    <option value="Online_Payment">Online Payment</option>
                    <option value="Insurence_Coverage">Insurence Coverage</option>
                </select>
            </div>

            <input type="button" onclick="getDetails()" value="Submit" />
        </form>
    </div>
</body>

               